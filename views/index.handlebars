    <div class="row">
        <form action=" game/create" method="POST">

            <div class="row">
                <div class="col-md-3"></div>

                <div class="form-group col-md-6">
                    <center><label for="game_name" class="font">Add a Game</label>
                    </center>
                    <textarea class="form-control" columns="8" rows="4" id="new_game" name="game_name"></textarea>
                </div>

                <div class="col-md-3"></div>
            </div>

            <center>
                <button id="submit-button" type="submit" class="btn btn-danger">Game On!</button>
            </center>

        </form>

        <div class="row">
            <center>
                <div class="col-md-6">
                    <h4 class="font">Game Wish List</h4>
                    <div id="ready_to_play">

                        {{#each games}}
                        {{#unless owned}}
                        <form action="game/own/{{id}}" method="POST">
                            <div class="input-group">
                                <li class="form-control">{{id}}. {{game_name}}</li>
                                <span class="input-group-btn">
                                    <button class="btn btn-success devour-button" type="submit">Own It!</button>
                                </span>
                            </div>
                        </form>
                        {{/unless}}
                        {{/each}}

                    </div>
                </div>

                <div class="col-md-6">
                    <h4 class="font">Game Owned!</h4>
                    <div id="already_owned">

                        {{#each games}}
                        {{#if this.owned}}
                        <div class="input-group">
                            <li class="form-control">{{this.id}}. {{this.game_name}} <div class="rw-ui-container"></div>
                            </li>
                            {{!-- <span class="input-group-btn">
                        <button class="btn btn-success devour-button" type="submit">Review It!</button>
                        
                    </span> --}}

                        </div>
                        {{/if}}
                        {{/each}}


                    </div>